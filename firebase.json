{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/__pycache__/**",
      "**/node_modules/**",
      "app.py",
      "data/**",
      "templates/**",
      ".venv/**"
    ],
    "headers": [
      {
        "source": "**/*.@(css|js|svg|png|jpg|jpeg|webp|woff|woff2)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=31536000,immutable"
          }
        ]
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
}
